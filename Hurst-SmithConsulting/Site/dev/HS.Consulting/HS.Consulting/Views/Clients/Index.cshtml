            <div class="row">
                <div class="col-xs-1 col-md-4"></div>
                <div class="col-xs-10 col-md-4">
                    <div class="row">
                        <div class="col-xs-12 testimonial-client">@service.Testimonial.Client</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 testimonial-company">@service.Testimonial.Company</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 testimonial-text">@service.Testimonial.Caption</div>
                    </div>
