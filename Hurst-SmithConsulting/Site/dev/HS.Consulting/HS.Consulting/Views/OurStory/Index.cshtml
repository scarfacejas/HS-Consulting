<div class="row sub-header">
    <div class="col-xs-1"></div>
    <div class="col-xs-11">
        <ul class="list-inline">
            <li>
                <a id="approach" class="bold" href="#">Approach</a>
            </li>
            <li>
                <a id="about" href="#">About Niki</a>
            </li>
            <li id="partners">
                <a id="partners" href="#">Partners</a>
            </li>
        </ul>
    </div>
    <div class="col-xs-1"></div>
</div>

<div class="row services-main">
    <div class="col-xs-12">
        <br />
        <br />
    </div>
    <div id="our-story-content" class="col-xs-12 col-md-10 col-lg-6 col-md-offset-1 col-lg-offset-3">
        @Html.Partial("_ApproachPartialView")
    </div>
    <div class="col-xs-12">
        <br />
        <br />
    </div>
</div>

<div class="row services-main">
    <div class="col-xs-12">
        <br />
        <br />
    </div>
</div>

@Html.Partial("_TestimonialPartialView", HS.Consulting.Data.TestimonialData.Random)

@section scripts {
    <script type="text/javascript">
        function selectLink(id) {
            var selected = $(id);
            if (!selected.hasClass('bold'))
                selected.addClass('bold')

            if (id != '#approach')
                $('#approach').removeClass('bold')

            if (id != '#about')
                $('#about').removeClass('bold')

            if (id != '#partners')
                $('#partners').removeClass('bold')
        }

        $('#approach').click(function () {
            selectLink('#approach');
            $('#our-story-content').load("@Html.Raw(Url.Action("Approach"))");
        });

        $('#about').click(function () {
            selectLink('#about');
            $('#our-story-content').load("@Html.Raw(Url.Action("About"))");
        });

        $('#partners').click(function () {
            selectLink('#partners');
            $('#our-story-content').load("@Html.Raw(Url.Action("Partners"))");
        });
    </script>
}