@model HS.Consulting.Models.Service

@section customCss {
    <link href="~/Content/Site-serivces.css" rel="stylesheet" />
}

@section headerImage {
    <div class="col-xs-11 col-sm-offset-1">
        <div class="row">
            <div class="col-xs-12">
                <br />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="row">
                    <div class="col-xs-12 text-left service">SERVICES</div>
                    <div class="col-xs-12 text-left service-header">@Model.Name</div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="row service-image">
                    <div class="col-xs-12 col-md-6 center-block"><img src="~/Content/Images/@Model.ImageUrl" /></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <br />
            </div>
        </div>
    </div>
}

<div class="row sub-header">
    <div class="col-xs-1"></div>
    <div class="col-xs-11">
        <ul class="list-inline">
            @foreach (var name in HS.Consulting.Data.ServiceData.ServicesNames)
            {
                <li>
                    <a href="/Services/@name.Replace(" ", string.Empty)">
                        @if (name == Model.Name)
                        {
                            @:<span style="font-weight: 700;">
                        }
                        @name
                        @if (name == Model.Name)
                        {
                            @:</span>
                        }
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="col-xs-1"></div>
</div>
<div class="row services-main">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12"><br /><br /></div>
        </div>
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-10 col-md-8 col-md-offset-2 col-lg-5 col-lg-offset-2 service-block">
                <div class="row">
                    <div class="col-xs-12 service-description">
                        <div>@Model.Description</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 service-subtitle">
                        <div>@Model.SubTitle</div>
                    </div>
                </div>
                @if (Model.Items.Any())
                {
                    <div class="row">
                        <div class="col-xs-12">
                            <hr />
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-lg-6 col-xs-12">
                        <div class="row">
                            @{  var i = 0;}
                            @foreach (var item in Model.Items.Where(s => (i++ % 2) == 0))
                            {
                                <div class="col-xs-2"><img src="~/Content/Images/done-all.png" /></div>
                                <div class="col-xs-10">@item</div>
                            }
                        </div>
                    </div>
                    <div class="col-lg-6 col-xs-12">
                        <div class="row">
                            @{  i = 0;}
                            @foreach (var item in Model.Items.Where(s => (i++ % 2) != 0))
                            {
                                <div class="col-xs-2"><img src="~/Content/Images/done-all.png" /></div>
                                <div class="col-xs-10">@item</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1"></div>
        </div>
        <div class="row">
            <div class="col-xs-12"><br /><br /></div>
        </div>
    </div>
</div>
@Html.Partial("_TestimonialPartialView", @Model.Testimonial)
<div class="row service-interimage background-image-unset">
    <div class="col-xs-12">&nbsp;</div>
</div>
<div class="row standard-div">
    <div class="row">
        <div class="col-xs-12 other-services text-center">
            <br />
            OTHER SERVICES
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        @foreach (var item in HS.Consulting.Data.ServiceData.Services.Where(s => s.Name != Model.Name))
        {
            <div class="col-xs-1 hidden-lg"></div>
            <div class="col-xs-10 col-lg-3">
                <div class="row services center-block text-center">
                    <div class="col-lg-12 col-xs-3 col-md-5" onclick="location.href = '/Services/@item.Name.Replace(" ", string.Empty)'">
                        <img src="~/Content/Images/@item.ImageUrl" />
                    </div>
                    <div class="col-lg-12 col-xs-9 col-md-7 text-center" onclick="location.href = '/Services/@item.Name.Replace(" ", string.Empty)'">
                        @item.Name
                    </div>
                </div>
            </div>
            <div class="col-xs-1 hidden-lg"><br /></div>
            <div class="clearfix visible-xs"></div>
            <div class="clearfix visible-md"></div>
        }
    </div>
    <div class="row">
        <div class="col-xs-12"><br /><br /></div>
    </div>
</div>
