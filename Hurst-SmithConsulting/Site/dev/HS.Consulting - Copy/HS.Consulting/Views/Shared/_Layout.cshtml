<body>
    <div>
        <div class="header-image" style="background-image: url('@ViewBag.MainImage');">
            <div class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/"><img src="~/Content/Images/HSC_logo.png" /></a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Services", "Index", "Services")</li>
                            <li>@Html.ActionLink("Our Story", "Index", "Our-Story")</li>
                            <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                            <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                        </ul>
                    </div>
                </div>
            </div>
            @RenderSection("headerImage")
        </div>
        @RenderBody()
        <div id="evenly-spaced" class="footer-links">
            <img src="~/Content/Images/Iris.png" />
            <img src="~/Content/Images/Wdpm.png" />
            <img src="~/Content/Images/Naked Ideas logo_Greyscale.png" />
            <img src="~/Content/Images/StottAndMay.png" />
            <img src="~/Content/Images/we3-homepage.png" />
            <img src="~/Content/Images/Initials.png" />
            <img src="~/Content/Images/Fosbury.png" />
            <img src="~/Content/Images/QCG.png" />
            <span class="stretch"></span>
        </div>
        <div class="footer-container">
            @Html.ActionLink("Services", "Index", "Services")
            @Html.ActionLink("Contact Us", "Index", "Contact")
            <span style="float:right">
                <img src="~/Content/Images/Twitter_logo_white.png" />
                <img src="~/Content/Images/Instagram_simple_icon.svg" />
                <img src="~/Content/Images/Pinterest.svg" />
                <img src="~/Content/Images/linkedin.svg" />
            </span>
            <hr />
            <span class="copyright">© Copyright 2015 - @DateTime.Now.Year Hurst-Smith Consulting.</span>
            <span class="copyright" style="float: right">Designed by: Naked Ideas</span>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
